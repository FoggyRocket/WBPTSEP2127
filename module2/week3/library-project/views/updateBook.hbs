<h3>Update</h3>
<form method="POST" action="/book/updateBook/{{book._id}}">
    <label>Title</label>
    <input name="title" type="text" value="{{book.title}}">
    <label>Description</label>
    <input name="description" type="text" value="{{book.description}}">
    <label>Author</label>
    <input name="author" type="text" value="{{book.author}}">
    <label>Rating</label>
    <input name="rating" type="number" value="{{book.rating}}">
    <input name="role" type="text" >
    <button type="submit">Submit</button>
</form>
